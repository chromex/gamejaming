-- util
function clamp(val,minv,maxv)
	return min(maxv,max(minv,val))
end

function dist(ax,ay,bx,by)
	local dx=bx-ax
	local dy=by-ay
	return sqrt(dx*dx+dy*dy)
end

dbgstrs={}
function dbg(str)
	add(dbgstrs,str)
end

function draw_debug()
	camera()
	for s in all(dbgstrs) do
		print(s)
	end
	dbgstrs={}
end

btnstate={}
btnstate[❎]={cur=false,prev=false}
	
function tick_btn()
	local st=btnstate[❎]
	st.prev=st.cur
	st.cur=btn(❎)
end

function rel_btn(b)
	local st=btnstate[b]
	return st.cur==true and st.prev==false
end
